# Core application variables
NODE_ENV=development

# Database
POSTGRES_USER=defi_options
POSTGRES_PASSWORD=defi_options
POSTGRES_DB=defi_options
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://defi_options:defi_options@localhost:5432/defi_options?schema=public
DEPLOYMENTS_NETWORK=localhost
# Optional override when seeding without standard deployment artifact
# DEPLOYMENTS_FILE=/absolute/path/to/deployments.json
# UNDERLYING_SYMBOL=ETH
# UNDERLYING_DECIMALS=18
# QUOTE_SYMBOL=USDC
# QUOTE_DECIMALS=6

# Redis
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BROKER=localhost:9092
KAFKA_CLIENT_ID=defi-options-platform

# Blockchain RPC
ANVIL_RPC_URL=http://127.0.0.1:8545
CHAIN_ID=31337

# Contracts deployment
DEPLOYER_PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
KEEPER_PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
ADMIN_API_KEY=changeme-admin
KEEPER_API_KEY=changeme-keeper
LIQUIDATOR_API_KEY=changeme-liquidator

# GraphQL Gateway
GRAPHQL_PORT=4000
GRAPHQL_HOST=0.0.0.0
SETTLEMENT_POLL_INTERVAL=60000
INDEXER_POLL_INTERVAL=15000
INDEXER_RPC_URL=http://127.0.0.1:8545

# Feature flags
ENABLE_COMPLIANCE=false
ENABLE_EXOTIC_OPTIONS=false
