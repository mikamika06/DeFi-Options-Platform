{
  "name": "@defi-options/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx api/src/server.ts",
    "start": "NODE_ENV=production tsx api/src/server.ts",
    "prisma:generate": "node prisma/run-with-env.js prisma generate",
    "prisma:deploy": "node prisma/run-with-env.js prisma migrate deploy",
    "prisma:dev": "node prisma/run-with-env.js prisma migrate dev",
    "db:seed": "node prisma/run-with-env.js prisma db seed",
    "worker:risk": "NODE_ENV=${NODE_ENV:-development} tsx workers/risk-engine.ts",
    "worker:settlement": "NODE_ENV=${NODE_ENV:-development} tsx workers/settlement-worker.ts",
    "worker:liquidation": "NODE_ENV=${NODE_ENV:-development} tsx workers/liquidation-worker.ts",
    "worker:margin": "NODE_ENV=${NODE_ENV:-development} tsx workers/margin-worker.ts",
    "worker:iv": "NODE_ENV=${NODE_ENV:-development} tsx workers/iv-publisher.ts",
    "worker:greeks": "NODE_ENV=${NODE_ENV:-development} tsx workers/greeks-worker.ts",
    "worker:settlement-scheduler": "NODE_ENV=${NODE_ENV:-development} tsx workers/settlement-scheduler.ts",
    "worker:indexer": "NODE_ENV=${NODE_ENV:-development} tsx workers/event-indexer.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "bullmq": "^5.61.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "fastify": "^4.27.0",
    "graphql": "^16.8.1",
    "ioredis": "^5.8.1",
    "mercurius": "^12.2.0",
    "pino": "^9.13.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "prisma": "^5.17.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
